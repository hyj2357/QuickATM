<?xml version="1.0" encoding="GBK"?>

<!DOCTYPE struts  PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd" >


<struts>
   

    <include file="struts-part1.xml"/>
	
    <constant name="struts.devMode" value="false"/>
    
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"/>
    
    <package name="scuthnweb" extends="struts-default" namespace="/">
      <interceptors>
       <interceptor name="AuthorityIntercept" class="com.quickpayatm.action.authority.AccountLoginInterceptor"/>                                 
       <!-- 拦截器栈配置 -->
       <interceptor-stack name="AuthorityInterceptStack">
          <interceptor-ref name="AuthorityIntercept"/>
          <interceptor-ref name="defaultStack"/>
       </interceptor-stack>
     </interceptors>
                 
       <action name="CheckAccountBalance" class="CheckAccountBalance">
          <result name="success">/WEB-INF/jsp/op_checkBalance.jsp</result>
       </action>
       <action name="DepositToAccount" class="DepositToAccount">
          <result name="success">/WEB-INF/jsp/op.htm</result>
          <result name="error">/WEB-INF/jsp/op.htm</result>
       </action>
       <action name="DrawFromAccount" class="DrawFromAccount">
          <result name="success">/WEB-INF/jsp/op.htm</result>
          <result name="error">/WEB-INF/jsp/op.htm</result>
       </action>
       <action name="Login" class="Login">
          <result name="success">/WEB-INF/jsp/op.htm</result>
          <result name="error">/WEB-INF/jsp/login.htm</result>
       </action>
       <action name="ModifyPassword" class="ModifyPassword">
          <result name="success">/WEB-INF/jsp/op.htm</result>
          <result name="error">/WEB-INF/jsp/op.htm</result>          
       </action>
       <action name="TransferAccount" class="TransferAccount">
          <result name="success">/WEB-INF/jsp/op.htm</result>
          <result name="error">/WEB-INF/jsp/op.htm</result>          
       </action>
       <action name="LoginOut" class="LoginOut">
          <result name="success">/WEB-INF/jsp/login.htm</result>
       </action>
<!-- WEB-INF下界面转发Action -->
       <action name="pfs" class="pfs">
           <result name="/WEB-INF/jsp/top.htm">/WEB-INF/jsp/top.htm</result>
           <result name="/WEB-INF/jsp/login.htm">/WEB-INF/jsp/login.htm</result>           
       </action>      
       <action name="pfs_s" class="pfs_s">  
           <result name="/WEB-INF/jsp/op_deposit.htm">/WEB-INF/jsp/op_deposit.htm</result>
           <result name="/WEB-INF/jsp/op_draw.htm">/WEB-INF/jsp/op_draw.htm</result>
           <result name="/WEB-INF/jsp/op_modifyPassword.htm">/WEB-INF/jsp/op_modifyPassword.htm</result>
           <result name="/WEB-INF/jsp/op_transfer.htm">/WEB-INF/jsp/op_transfer.htm</result>           
           <result name="/WEB-INF/jsp/op.htm">/WEB-INF/jsp/op.htm</result> 
           <result name="error">/WEB-INF/jsp/login.htm</result>
       </action>
       
    </package>
   
</struts>
